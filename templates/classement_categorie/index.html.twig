{% extends 'base.html.twig' %}

{% block title %}ClassementCategorie index{% endblock %}

{% block body %}
    <h1>Classement par categorie</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Rang</th>
                <th>Point</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for classement_categorie in classement_categories %}
            <tr>
                <td>{{ classement_categorie.id }}</td>
                <td>{{ classement_categorie.rang }}</td>
                <td>{{ classement_categorie.point }}</td>
                <td>
                    <a href="{{ path('app_classement_categorie_show', {'id': classement_categorie.id}) }}">show</a>
                    <a href="{{ path('app_classement_categorie_edit', {'id': classement_categorie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_classement_categorie_new') }}">Create new</a>
{% endblock %}
