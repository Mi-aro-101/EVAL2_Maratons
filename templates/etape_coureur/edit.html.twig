{% extends 'admin/base.html.twig' %}

{% block title %}Temps arrivee{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Assigner temps d'arrivee</h4>
                  {{ form_start(form) }}
                    <div class="form-group">
                        <label for="exampleInputUsername1">Coureur : <strong> {{ etape_coureur.coureur.nomCoureur }} </strong></label>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputUsername1">Equipe : <strong> {{ etape_coureur.coureur.equipe.nomEquipe }} </strong></label>
                    </div>
                    <div class="form-group">
                      <label for="exampleInputUsername1">Arrivee</label>
                      <input type="datetime-local" name="{{ field_name(form.arrivee) }}" class="form-control" id="exampleInputUsername1" placeholder="Username" step="1">
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Valider</button>
                  {{ form_end(form) }}
                </div>
              </div>
            </div>
    </div>

