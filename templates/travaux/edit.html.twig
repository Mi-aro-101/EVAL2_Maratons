{% extends 'admin/base.html.twig' %}

{% block title %}Edit Travaux{% endblock %}

{% block body %}
    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
        <div class="card">
            <div class="header">
                <h2>
                    Mettre a jour les valeurs de travaux
                </h2>
            </div>
            <form name="travaux" method="post">
                <div class="body">
                    <div class="row clearfix">
                        <div class="col-sm-12">
                             <div class="form-group">
                                <div class="form-line">
                                    <label for="dateDevis">Description</label>
                                    <input type="text" value="{{ travaux.getDescription() }}"  name={{ field_name(form.description) }} id="dateDevis" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-line">
                                    <label for="dateDevis">Prix unitaire</label>
                                    <input type="text" value={{ travaux.getPrixUnitaire() }} name={{ field_name(form.prixUnitaire) }} id="dateDevis" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-line">
                                    <label for="dateDevis">Code</label>
                                    <input type="text" value="{{ travaux.getCode() }}" name={{ field_name(form.code) }} id="dateDevis" class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                    {# <button class="btn btn-warning btn-lg">Mettre a jour</button> #}
                    {{ include('travaux/_form.html.twig', {'button_label': 'Update'}) }}
                </div>
            </form>
        </div>
    </div>

    <a href="{{ path('app_travaux_index') }}"><button class="btn btn-lg btn-info"><= Retour </button></a>

    {# {{ include('travaux/_delete_form.html.twig') }} #}
{% endblock %}
